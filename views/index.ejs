    <%var name =user.username%>  
<%for(i=0;i<blogs.length;i++){ %>
  <form action="/crud/delete?user=<%=name%>&blog_id=<%= blogs[i]._id %>" method="POST">
  <h1><%=blogs[i].title%></h1>
  <h1><%=blogs[i].content%></h1>
  <h1><%=blogs[i].author%></h1>
  <h1><%=blogs[i].data%></h1>
  <h1><%=blogs[i].category%></h1>
